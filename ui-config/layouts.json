{
    "type": "opensaberLayoutSchema",
    "version": "0.1",
    "layouts": [
        {
            "institute": {
                "api": "/Institute",
                "title": "INSTITUTE_PROFILE",
                "langKey" : "institute",
                "headerName" : "instituteName",
                "subHeadername" : "address.state,contactDetails.address.city",
                "blocks": [
                    {
                        "definition": "Institute",
                        "title": "INSTITUTE_DEATILS",
                        "add": false,
                        "edit": true,
                        "editform":"institute-setup",
                        "fields": {
                            "includes": ["*"],
                            "excludes": ["instituteAffiliation", "affiliation"]
                        },
                        "propertyShowFirst" : [ "instituteName", "email"]
                    },
                    {
                        "definition": "Institute",
                        "title": "AFFILIATION_DETAILS",
                        "add": true,
                        "addform":"affiliation",
                        "claimEdit": false,
                        "editform":"affiliation",
                        "multiple": true,
                        "headValue" : "affiliationNumber",
                        "canRaiseClaim" : true,
                        "fields": {
                            "includes": ["instituteAffiliation"]
                        },
                        "customDefinitions": {
                            "instituteAffiliation": {
                                "type": "array",
                                "items": {
                                    "type": "object",
                                    "properties": {
                                        "propertyData": {
                                            "type": "json",
                                            "properties": {
                                                "affiliation": {
                                                    "title": "Institute Affiliation",
                                                    "$ref": "#/definitions/Affiliation"
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        },
                        "propertyShowFirst" : [ "affiliationNumber", "medium", "grantYear", "expiryYear"]
                    }
                ]
            }
        },
        {
            "teacher": {
                "api": "/Teacher",
                "title": "TEACHER_PROFILE",
                "langKey" : "teacherStudent",
                "headerName" : "identityDetails.fullName",
                "subHeadername" : "contactDetails.address.state,contactDetails.address.city",
                "blocks": [
                    {
                        "definition": "Teacher",
                        "title": "PERSONAL_DETAILS",
                        "add": false,
                        "edit": true,
                        "editform":"teacher-setup",
                        "fields": {
                            "includes": ["*"],
                            "excludes": ["experience","academicQualifications"]
                        },
                        "propertyShowFirst" : [ "fullName", "mobile", "email"]

                    },
                    {
                        "definition": "Teacher",
                        "title": "PROFESSIONAL_EXPERIENCE",
                        "add": true,
                        "addform":"teacher-experience",
                        "editform":"teacher-experience",
                        "claimEdit": false,
                        "multiple": true,
                        "headValue" : "teacherType",
                        "canRaiseClaim" : true,
                        "fields": {
                            "includes": ["teacherExperience"]
                        },
                        "propertyShowFirst" : [ "employmentType", "instituteName"],
                        "customDefinitions": {
                            "teacherExperience": {
                                "type": "array",
                                "items": {
                                    "type": "object",
                                    "properties": {
                                        "propertyData": {
                                            "type": "json",
                                            "properties": {
                                                "experience": {
                                                    "title": "PROFESSIONAL_EXPERIENCE",
                                                    "$ref": "#/definitions/ExperienceType"
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    {
                        "definition": "Teacher",
                        "title": "EDUCATION",
                        "add": true,
                        "addform":"teacher-education",
                        "editform":"teacher-education",
                        "claimEdit": false,
                        "multiple": true,
                        "canRaiseClaim" : true,
                        "headValue" : "qualification",
                        "fields": {
                            "includes": ["teacherAcademicsQualification"]
                        },
                        "propertyShowFirst" : [ "qualification", "instituteName", "graduationYear"],
                        "customDefinitions": {
                            "teacherAcademicsQualification": {
                                "type": "array",
                                "items": {
                                    "type": "object",
                                    "properties": {
                                        "propertyData": {
                                            "type": "json",
                                            "properties": {
                                                "academicQualifications": {
                                                    "title": "EDUCATION",
                                                    "$ref": "#/definitions/AcademicQualification"
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                ]
            }
        },
        {
            "student": {
                "api": "/Student",
                "title": "STUDENT_PROFILE",
                "langKey" : "teacherStudent",
                "headerName" : "identityDetails.fullName",
                "subHeadername" : "contactDetails.address.state,contactDetails.address.city",
                "blocks": [
                    {
                        "definition": "Student",
                        "title": "BASIC_DETAILS",
                        "add": false,
                        "edit": true,
                        "editform":"student-setup",
                        "fields": {
                            "includes": ["*"],
                            "excludes": ["educationDetails"]
                        },
                        "propertyShowFirst" : [ "fullName", "mobile", "email"]
                    },
                    {
                        "definition": "Student",
                        "title": "EDUCATION_DEATILS",
                        "add": true,
                        "addform":"student-education",
                        "editform":"student-education",
                        "edit": false,
                        "claimEdit": false,
                        "canRaiseClaim" : true,
                        "multiple": true,
                        "headValue" : "class",
                        "fields": {
                            "includes": ["studentInstituteAttest"]
                        },
                        "customDefinitions": {
                            "studentInstituteAttest": {
                                "type": "array",
                                "items": {
                                    "type": "object",
                                    "properties": {
                                        "propertyData": {
                                            "type": "json",
                                            "properties": {
                                                "name": {
                                                    "type": "string",
                                                    "title": "Full Name"
                                                },
                                                "educationDetails": {
                                                    "title": "EDUCATION",
                                                    "$ref": "#/definitions/EducationType"
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                ]
            }
        },
        {
            "board-cbse": {
                "table": "board-cbse-attestation"
            }
        }
    ]
}
